{
  "name": "simple-note-core-ms",
  "description": "Simple Note - Core MS",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prebuild": "npx eslint . --fix --ext .ts",
    "build": "tsc",
    "build:watch": "nodemon --watch src --ext ts --exec npm run build",
    "test": "jest --runInBand --coverage",
    "test:watch": "jest --runInBand --watchAll",
    "test:ci": "jest --runInBand --coverage --silent",
    "log": "aws logs tail /aws/lambda/SimpleNote --follow"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "3.774.0",
    "@aws-sdk/client-eventbridge": "3.774.0",
    "@aws-sdk/lib-dynamodb": "3.774.0",
    "uuid": "~9.0.0",
    "yup": "~1.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@swc/core": "^1.3.69",
    "@swc/jest": "^0.2.26",
    "@tsconfig/node22": "^22.0.0",
    "@types/aws-lambda": "~8.10.119",
    "@types/jest": "~29.5.3",
    "@types/node": "~18.16.19",
    "@types/uuid": "~9.0.2",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jest": "^28.11.0",
    "globals": "^16.1.0",
    "jest": "~29.6.1",
    "jest-junit": "~16.0.0",
    "nodemon": "~3.0.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  }
